{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2020",
      "es2019"
    ],
    "moduleResolution": "node",
    "types": [ "node" ],
    "typeRoots": [
      "./types",
      "./global.d.ts",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}